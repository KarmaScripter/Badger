<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Badger" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        x:Name="InputBox" x:Class="Badger.MetroTextInput" mc:Ignorable="d" Background="#00141414"
        Foreground="#FFA0BDD4" Padding="1,1,1,1" MinWidth="220" MinHeight="70" MaxWidth="300"
        MaxHeight="100" Width="245" Height="80" BorderBrush="#FF0078D4" BorderThickness="1,1,1,1">
    <Canvas x:Name="Canvas" MinWidth="200" MaxWidth="260" MinHeight="60" MaxHeight="100"
            Background="#00000000">
        <local:MetroLabel x:Name="Label" Content="Name" Canvas.Left="13" Canvas.Top="3"
                HorizontalAlignment="Left" VerticalAlignment="Center" MinWidth="200" MinHeight="20"
                MaxWidth="260" MaxHeight="30" />
        <local:MetroTextBox x:Name="TextBox" Canvas.Left="13" TextWrapping="Wrap" Text="Value"
                Canvas.Top="38" HorizontalAlignment="Left" VerticalAlignment="Center" MinWidth="80"
                MinHeight="18" MaxWidth="260" MaxHeight="30" Padding="5,0,0,0" />
    </Canvas>
</UserControl>
