<Window x:Class="Badger.FileBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badger" mc:Ignorable="d" Title="Search File System" Height="480"
        Width="700" Background="#FF141414" BorderBrush="#FF0078D4" Foreground="#FFA0BDFC"
        Padding="1,1,1,1" BorderThickness="1,1,1,1" WindowStartupLocation="CenterScreen">
    <Grid x:Name="BrowserGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="49*" />
            <RowDefinition Height="328*" />
            <RowDefinition Height="85*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*" />
            <ColumnDefinition Width="440*" />
            <ColumnDefinition Width="133*" />
        </Grid.ColumnDefinitions>
        <local:MetroListBox x:Name="ListBox" Grid.Column="1"
                            d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5,49,35,0" Grid.RowSpan="2"
                            Height="320" VerticalAlignment="Top" />
    </Grid>
</Window>
