<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badger" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        x:Name="PivotView" x:Class="Badger.PivotWindow" mc:Ignorable="d" Title="Pivot Data"
        Height="750" Width="1400" Background="#FF141414" BorderBrush="#FF0078D4" FontSize="9"
        Foreground="#FF6ABDFC" WindowStartupLocation="CenterScreen" Margin="1,1,1,1"
        BorderThickness="1,1,1,1" Icon="/UI/Windows/Pivot/Application.png" MinWidth="200"
        MinHeight="100">
    <Grid>
        <local:ToolStrip x:Name="Toolbar" Margin="3,3,3,3" Padding="1,1,1,1"
                         BorderThickness="1,1,1,1" GripperVisibility="Hidden"
                         OverflowButtonVisibility="Hidden" HorizontalAlignment="Center" Width="1398"
                         Height="40" VerticalAlignment="Bottom">
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}"
                                          Foreground="{x:Null}" Margin="15,6,0,6" />
            <local:ToolStripLabel x:Name="StatusLabel" Content="Date &amp; Time" />
            <local:ToolStripButton x:Name="FirstButton"
                                   ImageSource="/UI/Windows/Pivot/FirstButton.png" />
            <local:ToolStripButton x:Name="PreviousButton"
                                   ImageSource="/UI/Windows/Pivot/PreviousButton.png" />
            <local:ToolStripButton x:Name="NextButton"
                                   ImageSource="/UI/Windows/Pivot/NextButton.png" />
            <local:ToolStripButton x:Name="LastButton"
                                   ImageSource="/UI/Windows/Pivot/LastButton.png" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}"
                                          Foreground="{x:Null}" Margin="15,6,0,6" />
            <local:ToolStripDropDown x:Name="ToolStripComboBox" Margin="1,1,1,1" Padding="1,1,1,1" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}"
                                          Foreground="{x:Null}" Margin="15,6,0,6" />
            <local:ToolStripTextBox x:Name="ToolStripTextBox" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}"
                                          Foreground="{x:Null}" Margin="15,6,0,6" />
            <local:ToolStripButton x:Name="LookupButton"
                                   ImageSource="/UI/Windows/Pivot/LookUpButton.png" />
            <local:ToolStripButton x:Name="RefreshButton"
                                   ImageSource="/UI/Windows/Pivot/RefreshButton.png" />
            <local:ToolStripButton x:Name="EditButton"
                                   ImageSource="/UI/Windows/Pivot/EditButton.png" />
            <local:ToolStripButton x:Name="DeleteButton"
                                   ImageSource="/UI/Windows/Pivot/DeleteButton.png" />
            <local:ToolStripButton x:Name="UndoButton"
                                   ImageSource="/UI/Windows/Pivot/BackButton.png" />
            <local:ToolStripButton x:Name="SaveButton"
                                   ImageSource="/UI/Windows/Pivot/SaveButton.png" />
            <local:ToolStripButton x:Name="ExportButton"
                                   ImageSource="/UI/Windows/Pivot/ExportButton.png" />
            <local:ToolStripButton x:Name="BrowseButton"
                                   ImageSource="/UI/Windows/Pivot/BrowseButton.png" />
            <local:ToolStripButton x:Name="MenuButton"
                                   ImageSource="/UI/Windows/Pivot/MenuButton.png" />
        </local:ToolStrip>
        <syncfusion:PivotGridControl x:Name="PivotGrid" AllowSelection="True"
                                     HorizontalAlignment="Left" Height="570" Margin="41,45,0,0" ShowGroupingBar="True"
                                     ShowSubTotals="True" SortOption="All" VerticalAlignment="Top" Width="1323"
                                     BorderBrush="#FF0078D4" Background="#FF282828" CurrentCellBorder="#FFC1B2B2"
                                     FieldListBorderBrush="#FF0078D4" Foreground="#FFA0BDFC"
                                     GroupingBarBackground="#FF4B4B4B" GroupingBarItemBorderBrush="#FF0078D4"
                                     GroupingBarItemBackground="#FF2D2D2D" GroupingButtonHoverBackgroundBrush="#FF183159"
                                     GroupingButtonCheckedForeground="White" GroupingBarItemForeground="#FFA0BDFC"
                                     GroupingButtonHoverBorderBrush="#FFA0BDFC" GroupingButtonHoverForeground="#FFF7F6F6"
                                     Padding="1,0,1,1" FontSize="12" BorderThickness="1,1,1,1" ToolTipEnabled="True" />
    </Grid>
</Window>
