<Window x:Name="FileDialog" x:Class="Badger.FolderBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badger" mc:Ignorable="d" Title="Search File System" Height="450"
        Width="800" Padding="1,1,1,1" BorderThickness="1,1,1,1" BorderBrush="#FF0078D4"
        Foreground="#FFA0BDFC" Background="#FF141414" WindowStartupLocation="CenterScreen">
    <Grid x:Name="BrowserGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="39*" />
            <RowDefinition Height="325*" />
            <RowDefinition Height="68*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="265*" />
            <ColumnDefinition Width="64*" />
        </Grid.ColumnDefinitions>
        <local:MetroListBox x:Name="ListBox" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}"
                            Margin="20,0,0,0" Height="275" VerticalAlignment="Center" Grid.Row="1"
                            HorizontalAlignment="Left" Width="480" />
    </Grid>
</Window>
