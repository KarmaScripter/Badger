                            Tag="EXECUTION" ToolTip="Execution Data Tables" Foreground="#FF0078D4" Height="22" />
                    <local:MetroRadioButton x:Name="ReferenceRadioButton" Content="Reference " Canvas.Left="137"
                            Canvas.Top="93" HorizontalAlignment="Center" VerticalAlignment="Top" Tag="REFERENCE"
                            ToolTip="Reference Data Tables" Foreground="#FF0078D4" Height="22" />
                    <local:MetroListBox x:Name="DataSourceListBox" Height="346" Width="225"
                            d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" Canvas.Top="120"
                            VerticalAlignment="Top" Canvas.Left="37" Background="#FF2D2D2D" />
                </Canvas>
            </TabItem>
            <TabItem x:Name="FilterTab" Header="Filter" Background="#FF141414" BorderBrush="#FF141414"
                    Foreground="#FFA0BDFC" Width="50" IsSelected="True" Margin="0,0,0,0" Height="24" Padding="6,2,6,5">

                <Canvas x:Name="FilterGrid" Height="622" Margin="0,0,23,0">

                    <local:MetroListBox x:Name="SecondListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Height="133"
                            Canvas.Left="44" Canvas.Top="332" Width="200" HorizontalAlignment="Center"
                            VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                            ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Hidden" />
                    <local:MetroListBox x:Name="FirstListBox" Height="121" Width="200"
                            d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="37" Canvas.Top="139"
                            HorizontalAlignment="Center" VerticalAlignment="Top"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden" />
                    <local:MetroComboBox x:Name="FirstComboBox" Background="#FF282828" Height="30" Width="150"
                            Canvas.Left="40" Canvas.Top="103" ToolTip="Select First Category"
                            HorizontalAlignment="Center" VerticalAlignment="Top">
                        <syncfusion:ComboBoxItemAdv Content="Item 1" Background="#FF141414" />
                        <syncfusion:ComboBoxItemAdv Content="Item 2" Background="#FF141414" />
                        <syncfusion:ComboBoxItemAdv Content="Item 3" Background="#FF141414" />
                        <syncfusion:ComboBoxItemAdv Content="Item 4" Background="#FF141414" />
                        <syncfusion:ComboBoxItemAdv Content="Item 5" Background="#FF141414" />
                    </local:MetroComboBox>
                    <local:MetroComboBox x:Name="SecondComboBox" Background="#FF282828" Height="30" Width="150"
                            Canvas.Left="47" Canvas.Top="295" ToolTip="Select Second Category">
                        <syncfusion:ComboBoxItemAdv Content="Item 1" />
                        <syncfusion:ComboBoxItemAdv Content="Item 2" />
                        <syncfusion:ComboBoxItemAdv Content="Item 3" />
                        <syncfusion:ComboBoxItemAdv Content="Item 4" />
                        <syncfusion:ComboBoxItemAdv Content="Item 5" />
                    </local:MetroComboBox>
                </Canvas>
            </TabItem>
            <TabItem x:Name="GroupTab" Height="24" Header="Group" Width="50" Background="#FF141414"
                    BorderBrush="#FF141414" Foreground="#FFA0BDFC" Padding="6,2,6,5" Margin="0,0,0,0">
                <Canvas x:Name="GroupCanvas" Background="#FF141414" Height="576" Margin="0,0,25,0">
                    <local:MetroLabel x:Name="FieldListBoxLabel" Content="Fields" Width="170" HorizontalAlignment="Left"
                            Canvas.Left="32" Canvas.Top="89" VerticalAlignment="Top" Foreground="#FF0078D4" />
                    <local:MetroListBox x:Name="FieldsListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Height="153"
                            Canvas.Left="27" Canvas.Top="120" VerticalAlignment="Top" Width="250"
                            HorizontalAlignment="Center" SelectionMode="Multiple" ToolTip="Select FIeld Groups" />
                    <local:MetroListBox x:Name="NumericsListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Height="129"
                            Canvas.Left="27" Canvas.Top="333" VerticalAlignment="Top" Width="250"
                            HorizontalAlignment="Center" SelectionMode="Multiple" ToolTip="Select Numeric Groups" />
                    <local:MetroLabel x:Name="NumericListBoxLabel" Content="Numerics" Width="170"
                            HorizontalAlignment="Center" Canvas.Left="27" Canvas.Top="307" VerticalAlignment="Top"
                            Foreground="#FF0078D4" />
                </Canvas>
            </TabItem>
            <TabItem x:Name="CalendarTab" Height="24" Header="Dates" Width="50" Background="#FF141414"
                    BorderBrush="#FF141414" Foreground="#FFA0BDFC" IsSelected="False" Margin="0,0,0,0" Padding="6,2,6,5">
                <Canvas x:Name="CalendarCanvas" Background="#FF141414" Margin="0,5,0,0">
                    <local:MetroLabel x:Name="FirstCalendarLabel" Content="First" Canvas.Left="27" Canvas.Top="75"
                            HorizontalAlignment="Left" VerticalAlignment="Center" Width="235" Foreground="#FF0078D4"
                            Height="24" />
                    <local:MetroCalendar x:Name="FirstCalendar" Date="1/1/2020" Height="184" Canvas.Left="27"
                            Canvas.Top="103" Width="240" HorizontalAlignment="Center" VerticalAlignment="Top"
                            BorderThickness="1,1,1,1" />
                    <local:MetroLabel x:Name="SecondCalendarLabel" Content="Second" Canvas.Left="27" Canvas.Top="325"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Width="240" Foreground="#FF0078D4"
                            Height="24" />
                    <local:MetroCalendar x:Name="SecondCalendar" Date="1/1/2020" Height="184" Canvas.Left="27"
                            Canvas.Top="350" Width="240" BorderThickness="1,1,1,1" HorizontalAlignment="Center"
                            VerticalAlignment="Top" />
                </Canvas>
            </TabItem>
        </local:MetroTabControl>
        <local:MetroTabControl x:Name="PrimaryTabControl" Height="637" Width="1033" Canvas.Left="22" Canvas.Top="15"
                HorizontalAlignment="Left" VerticalAlignment="Center">
            <TabItem x:Name="DataTab" Header="Data" Background="#FF141414" BorderBrush="#FF141414"
                    Foreground="#FFA0BDFC" Width="100" Margin="0,0,0,0" Height="24" Padding="6,2,6,5">
                <Canvas x:Name="DataTabCanvas" Background="#FF141414" Margin="0,10,0,0">
                    <local:MetroDataGrid x:Name="DataGrid" Height="371" Canvas.Left="23" Canvas.Top="92" Width="990"
                            HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="#FF0078D4"
                            SelectionForegroundBrush="#FFFFFCFC" BorderThickness="2,2,2,2" />
                    <local:MetroLabel x:Name="DataHeader" Content="" Canvas.Left="34" Canvas.Top="15" Width="726"
                            HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FF0078D4" />
                    <badger:MetroLabel x:Name="FirstGridLabel" Content="MetroLabel" Canvas.Left="28" Canvas.Top="474"
                            HorizontalAlignment="Left" VerticalAlignment="Center" Width="210" />
                    <badger:MetroLabel x:Name="SecondGridLabel" Content="MetroLabel" Canvas.Left="278" Canvas.Top="474"
                            Width="210" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <badger:MetroLabel x:Name="ThirdGridLabel" Content="MetroLabel" Canvas.Left="533" Canvas.Top="474"
                            Width="210" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <badger:MetroLabel x:Name="FourthGridLabel" Content="MetroLabel" Canvas.Left="798" Canvas.Top="474"
                            Width="210" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <badger:MetroLabel x:Name="FieldsLabel" Content="MetroLabel" Canvas.Left="28" Canvas.Top="500"
                            Width="210" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <badger:MetroLabel x:Name="NumericsLabel" Content="MetroLabel" Canvas.Left="278" Canvas.Top="500"
                            Width="210" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <badger:MetroLabel x:Name="FirstDateLabel" Content="MetroLabel" Canvas.Left="533" Canvas.Top="500"
                            Width="210" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <badger:MetroLabel x:Name="SecondDateLabel" Content="MetroLabel" Canvas.Left="798" Canvas.Top="500"
                            Width="210" HorizontalAlignment="Left" VerticalAlignment="Top" />
                </Canvas>
            </TabItem>
            <TabItem x:Name="EditTab" Height="24" Header="Edit" Width="100" Background="#FF141414"
                    BorderBrush="#FF141414" Foreground="#FFA0BDFC" IsSelected="False" Margin="0,0,0,0" Padding="6,2,6,5">
                <Canvas x:Name="EditTabCanvas" ScrollViewer.CanContentScroll="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden" Margin="0,0,-11,0">
                    <Canvas HorizontalAlignment="Center" Height="430" Canvas.Left="0" Canvas.Top="0"
                            VerticalAlignment="Center" />
                    <local:MetroLabel x:Name="EditHeader" Canvas.Left="18" Canvas.Top="9" HorizontalAlignment="Center"
                            VerticalAlignment="Top" Width="702" Foreground="#FF0078D4" Height="30" />
                    <StackPanel x:Name="EditStack" Height="513" Width="877" Canvas.Left="73" Canvas.Top="46"
                            HorizontalAlignment="Left">
                        <badger:MetroTextInput HorizontalAlignment="Left" />
                    </StackPanel>
                </Canvas>
            </TabItem>
            <TabItem x:Name="SchemaTab" Height="24" Header="Schema" Width="100" Background="#FF141414"
                    BorderBrush="#FF141414" Foreground="#FFA0BDFC" Margin="0,0,0,0" Padding="6,2,6,5">
                <Canvas x:Name="SchemaCanvas" Background="#FF141414" HorizontalAlignment="Right" Height="595"
                        Margin="0,0,5,0" VerticalAlignment="Top" Width="1011">
                    <local:MetroLabel x:Name="ColumnNameLabel" Content="Column Name" Width="115" Height="26"
                            HorizontalAlignment="Left" Canvas.Left="40" Canvas.Top="421" VerticalAlignment="Top"
                            Foreground="#FF0078D4" />
                    <local:MetroLabel x:Name="DataTypeLabel" Content="Data Type" Height="26" HorizontalAlignment="Left"
                            Canvas.Left="455" Canvas.Top="329" VerticalAlignment="Top" Width="70" Foreground="#FF0078D4"
