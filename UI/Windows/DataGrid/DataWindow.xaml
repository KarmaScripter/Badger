                            VerticalAlignment="Top" />
                    <local:MetroTile x:Name="AddTableButton" Height="40" Header="" Canvas.Left="295" Title="Add Table"
                            Canvas.Top="364" Width="90" HorizontalAlignment="Center" VerticalAlignment="Top" />
                    <local:MetroTile x:Name="AddColumnButton" Height="40" Header="" Canvas.Left="295" Title="Add Column"
                            Canvas.Top="439" Width="90" HorizontalAlignment="Center" VerticalAlignment="Top" />
                    <local:MetroLabel x:Name="SchemaHeader" Content="" Canvas.Left="4" Canvas.Top="37" Width="606"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF0078D4" />
                </Canvas>
