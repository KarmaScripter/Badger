                    <local:MetroLabel x:Name="DataColumnLabel" Content="Data Columns" Canvas.Left="455" Canvas.Top="154"
                            HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF0078D4" />
                    <local:MetroLabel x:Name="TableNameLabel" Content="Table Name" Canvas.Left="35" Canvas.Top="329"
                            HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF0078D4" />
                    <local:MetroTextBox Canvas.Left="35" TextWrapping="Wrap" Canvas.Top="359" Width="190"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" />
