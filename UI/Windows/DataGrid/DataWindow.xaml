                            RenderTransformOrigin="0.412,0.501" Height="22" />
                    <local:MetroRadioButton x:Name="AccessRadioButton" Content="Access" Canvas.Left="195"
                            Canvas.Top="109" HorizontalAlignment="Left" VerticalAlignment="Center" Width="60"
                            Height="22" />
                    <local:MetroRadioButton x:Name="SqlCeRadioButton" Content="SQL CE" Canvas.Left="265"
                            Canvas.Top="109" HorizontalAlignment="Left" VerticalAlignment="Center" Width="65"
                            Height="22" />
                    <local:MetroTextBox x:Name="ColumnNameTextBox" Canvas.Left="40" TextWrapping="Wrap" Canvas.Top="449"
