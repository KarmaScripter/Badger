<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badger" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        x:Name="DataView" x:Class="Badger.DataWindow" mc:Ignorable="d" Title="Budget Execution"
        Height="750" Width="1400" Background="#FF141414" BorderBrush="#FF0078D4"
        Foreground="#FF9CD3FD" WindowStartupLocation="CenterScreen" Topmost="True"
        BorderThickness="1,1,1,1" Margin="1,1,1,0">
    <Grid Background="#00141400" RenderTransformOrigin="0.786,0.411">
        <syncfusion:SfDataGrid x:Name="Datagrid" HorizontalAlignment="Left" Height="433"
                Margin="69,76,0,0" VerticalAlignment="Top" Width="831" HeaderRowHeight="28"
                BorderBrush="#FF464646" Background="#FF464646" CurrentCellBorderBrush="#FF9CD3FD"
                SelectionForegroundBrush="White" RowHoverHighlightingBrush="#FF113554"
                GroupRowSelectionBrush="SteelBlue" RowSelectionBrush="SteelBlue"
                RenderTransformOrigin="0.5,0.5">
            <syncfusion:SfDataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform AngleX="-0.301" />
                    <RotateTransform />
                    <TranslateTransform X="-0.923" />
                </TransformGroup>
            </syncfusion:SfDataGrid.RenderTransform>
        </syncfusion:SfDataGrid>
        <local:ToolStrip x:Name="Toolbar" HorizontalAlignment="Center" Width="1398" Height="40"
                VerticalAlignment="Bottom" Margin="3,3,3,3">
            <local:ToolStripLabel x:Name="StatusLabel" Content="Date &amp; Time" Width="100"
                    Background="{x:Null}" />
            <local:ToolStripButton x:Name="FirstButton" ToolTip="First Record"
                    ImageSource="/UI/Windows/Datagrid/FirstButton.png" Height="35" Margin="3,3,3,3"
                    Padding="1,1,1,1" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" />
            <local:ToolStripButton x:Name="PreviousButton" ToolTip="Previous Record"
                    ImageSource="/UI/Windows/Datagrid/PreviousButton.png" Height="35" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" />
            <local:ToolStripButton x:Name="NextButton" ToolTip="Next Record"
                    ImageSource="/UI/Windows/Datagrid/NextButton.png" Height="35" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" />
            <local:ToolStripButton x:Name="LastButton" ToolTip="Last Record"
                    ImageSource="/UI/Windows/Datagrid/LastButton.png" Height="35" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" />
            <local:ToolStripDropDown x:Name="ToolBarComboBox" BorderBrush="#FF6ABDFC"
                    Foreground="#FFFDFDFD" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" />
            <local:ToolStripTextBox x:Name="ToolBarTextBox" BorderBrush="#FF6ABDFC"
                    Foreground="White" Height="30" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" />
            <local:ToolStripButton x:Name="LookupButton" ToolTip="Look Up"
                    ImageSource="/UI/Windows/Datagrid/LookUpButton.png" Height="35" />
            <local:ToolStripButton x:Name="RefreshButton" ToolTip="Refresh"
                    ImageSource="/UI/Windows/Datagrid/RefreshButton.png" Height="35" />
            <local:ToolStripButton x:Name="EditButton" ToolTip="Edit"
                    ImageSource="/UI/Windows/Datagrid/EditButton.png" Height="35" />
            <local:ToolStripButton x:Name="SaveButton" ToolTip="Save"
                    ImageSource="/UI/Windows/Datagrid/SaveButton.png" Height="35" />
            <local:ToolStripButton x:Name="UndoButton" ToolTip="Undo"
                    ImageSource="/UI/Windows/Datagrid/BackButton.png" Height="35" />
            <local:ToolStripButton x:Name="BrowseButton" ToolTip="Browse"
                    ImageSource="/UI/Windows/Datagrid/BrowseButton.png" Height="35" />
            <local:ToolStripButton x:Name="MenuButton" ToolTip="Main Menu"
                    ImageSource="/UI/Windows/Datagrid/MenuButton.png" />
        </local:ToolStrip>
    </Grid>
</Window>
