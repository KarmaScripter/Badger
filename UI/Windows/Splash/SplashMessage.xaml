<Window x:Name="Message" x:Class="Badger.SplashMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="Message" Height="245" Width="515" Background="#FF002336" BorderBrush="#FF6ABAD4"
        Foreground="#FF6ABAD4" WindowStyle="None" BorderThickness="1,1,1,1" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="547*" />
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="18" Margin="1,1,0,0" VerticalAlignment="Top"
                Width="20" Source="/UI/Windows/Splash/SplashNotification.png" />
        <Label x:Name="TitleLabel" Content="Message" Margin="36,1,23,0" VerticalAlignment="Top"
                OpacityMask="Black" Foreground="#FFA0BDFC" SnapsToDevicePixels="True" Padding="5,1,5,5" />
        <Label x:Name="MessageLabel" Content="Label" Margin="65,84,58,0" VerticalAlignment="Top"
                Height="91" Foreground="#FFFCFEFF" />
    </Grid>
</Window>
