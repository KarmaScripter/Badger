<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badger" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:fc="http://devpelux.github.io/fullcontrols"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Name="SqlEditor"
        x:Class="Badger.EditorWindow" mc:Ignorable="d" Title="SQL Editor" Height="750" Width="1400"
        Background="#FF141414" BorderBrush="#FF0078D4" Margin="1,1,1,1"
        WindowStartupLocation="CenterScreen" BorderThickness="1,1,1,1" Padding="1,1,1,1"
        Icon="/UI/Windows/Editor/Application.png">
    <Grid x:Name="EditorGrid" Margin="3,3,3,3">
        <Grid.RowDefinitions>
            <RowDefinition Height="101*" />
            <RowDefinition Height="480*" />
            <RowDefinition Height="145*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="112*" />
            <ColumnDefinition Width="600*" />
            <ColumnDefinition Width="335*" />
            <ColumnDefinition Width="345*" />
        </Grid.ColumnDefinitions>
        <local:ToolStrip x:Name="Toolbar" Padding="1,1,1,1" Grid.ColumnSpan="4" Grid.Row="2"
                Margin="2,100,0,5" HorizontalAlignment="Left" Width="1400" Height="40">
            <local:ToolStripLabel x:Name="ToolStripLabel" Content="Date &amp; Time" />
            <local:ToolStripButton x:Name="FirstButton" ToolTip="First Record"
                    ImageSource="/UI/Windows/Chart/FirstButton.png" Height="30" />
            <local:ToolStripButton x:Name="PreviousButton" ToolTip="Previous Record"
                    ImageSource="/UI/Windows/Chart/PreviousButton.png" Height="30" />
            <local:ToolStripButton x:Name="NextButton" ToolTip="Next Record"
                    ImageSource="/UI/Windows/Chart/NextButton.png" Height="30" />
            <local:ToolStripButton x:Name="LastButton" ToolTip="Last Record"
                    ImageSource="/UI/Windows/Chart/LastButton.png" Height="30" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" Width="1" />
            <local:ToolStripDropDown x:Name="ToolStripComboBox" BorderBrush="#FF6ABDFC"
                    Foreground="White" Margin="3,0,3,0" Width="175" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" Width="1" />
            <local:ToolStripTextBox x:Name="ToolStripTextBox" />
            <syncfusion:MenuItemSeparator Background="#00D3D3D3" BorderBrush="#00D3D3D3"
                    Foreground="#006ABDFC" Width="1" />
            <local:ToolStripButton x:Name="LookupButton" ToolTip="Look Up"
                    ImageSource="/UI/Windows/Chart/LookUpButton.png" Height="30" />
            <local:ToolStripButton x:Name="RefreshButton" ToolTip="Refresh"
                    ImageSource="/UI/Windows/Chart/RefreshButton.png" Height="30" />
            <local:ToolStripButton x:Name="EditButton" ToolTip="Edit"
                    ImageSource="/UI/Windows/Chart/EditButton.png" Height="30" />
            <local:ToolStripButton x:Name="UndoButton" ToolTip="Undo Last"
                    ImageSource="/UI/Windows/Chart/BackButton.png" Height="30" />
            <local:ToolStripButton x:Name="SaveButton" ToolTip="Save"
                    ImageSource="/UI/Windows/Chart/SaveButton.png" Height="30" />
            <local:ToolStripButton x:Name="DeleteButton" ToolTip="Delete"
                    ImageSource="/UI/Windows/Chart/DeleteButton.png" Height="30" />
            <local:ToolStripButton x:Name="BrowseButton" ToolTip="Browse"
                    ImageSource="/UI/Windows/Chart/BrowseButton.png" Height="30" />
            <local:ToolStripButton x:Name="MenuButton" ToolTip="Main Menu"
                    ImageSource="/UI/Windows/Chart/MenuButton.png" Height="30" />
        </local:ToolStrip>
        <syncfusion:EditControl x:Name="Editor" Text="Edit Control" Background="#FF464646"
                BorderBrush="#FF0078D4" Foreground="#FFF0F1F3" CaretBrush="#FFEEFB00"
                LineNumberAreaBackground="Black" LineNumberTextForeground="#FF1FB70A"
                SelectionBackground="#FF183159" FontFamily="Source Code Pro"
                BorderThickness="1,1,1,1" OutliningAreaWidth="3" LineNumberAreaWidth="10"
                Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="15,15,0,0"
                HorizontalAlignment="Left" Width="900" Height="450" VerticalAlignment="Top" />
        <local:MetroListBox Grid.Column="3" Grid.Row="1" Margin="0,130,45,0"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.CanContentScroll="True" ClipToBounds="True" SnapsToDevicePixels="True"
                HorizontalAlignment="Right" Width="240" Height="335" VerticalAlignment="Top">
            <ListBoxItem Height="20" />
            <ListBoxItem Height="20" />
        </local:MetroListBox>
        <local:MetroRadioButton x:Name="SQLiteRadioButton" Grid.Column="3" Content="SQLite"
                HorizontalAlignment="Left" Margin="50,56,0,0" VerticalAlignment="Top" Width="60"
                Tag="SQLite" RenderTransformOrigin="0.286,0.668" Height="30" />
        <local:MetroRadioButton x:Name="AccessRadioButton" Grid.Column="3" Content="Access"
                HorizontalAlignment="Left" Margin="115,56,0,0" VerticalAlignment="Top" Width="65"
                Tag="Access" Height="30" />
        <local:MetroRadioButton x:Name="SqlServerRadioButton" Grid.Column="3" Content="SQL Server"
                HorizontalAlignment="Left" Margin="185,56,0,0" VerticalAlignment="Top" Width="80"
                Tag="SqlServer" Height="30" />
        <local:MetroRadioButton x:Name="SQLiteRadioButton_Copy" Grid.Column="3" Content="SQLite"
                HorizontalAlignment="Left" Margin="270,56,0,0" VerticalAlignment="Top" Width="70"
                Tag="SQLite" Height="30" />
        <local:MetroListBox Grid.Column="3" Grid.Row="1" Margin="0,15,45,0" Height="85"
                VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Right"
                Width="240">
            <ListBoxItem Height="20" />
            <ListBoxItem Height="20" />
        </local:MetroListBox>
    </Grid>
</Window>
