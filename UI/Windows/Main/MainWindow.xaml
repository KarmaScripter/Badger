<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" xmlns:local="clr-namespace:Badger"
        x:Name="Main" x:Class="Badger.MainWindow" mc:Ignorable="d" Title="Budget Execution"
        Height="750" Width="1350" BorderBrush="#FF0078D4" Foreground="#FF6ABDFC"
        Background="#FF141414" WindowStartupLocation="CenterScreen">
    <Grid Background="#00000000" Width="1350" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <local:MetroTile x:Name="ChartTile" Height="126" Header="" Margin="85,77,0,0"
                Title="Visusalizations" Width="155" HorizontalAlignment="Left"
                VerticalAlignment="Top" HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center" ScaleDepth="-1"
                ImageSource="/UI/Windows/Main/VisualizationTile.png" />
        <local:MetroTile x:Name="DataTile" HorizontalAlignment="Left" Height="126" Header=""
                Margin="339,77,0,0" Title="Data Grids" VerticalAlignment="Top" Width="155"
                HorizontalContentAlignment="Left" ImageSource="/UI/Windows/Main/DataTile.png" />
        <local:MetroTile x:Name="SqliteTile" HorizontalAlignment="Left" Height="126" Header=""
                Margin="339,0,0,0" Title="SQLite Data" VerticalAlignment="Center" Width="155"
                ImageSource="/UI/Windows/Main/SQLiteTile.png" />
        <local:MetroTile x:Name="PivotTile" HorizontalAlignment="Left" Height="126" Header=""
                Margin="594,77,0,0" Title="Pivot Data" VerticalAlignment="Top" Width="155"
                ImageSource="/UI/Windows/Main/PivotTile.png" />
        <local:MetroTile x:Name="SqlCeTile" HorizontalAlignment="Left" Height="126" Header=""
                Margin="594,0,0,0" Title="SQL Compact" VerticalAlignment="Center" Width="155"
                ImageSource="/UI/Windows/Main/SqlCeTile.png" />
        <local:MetroTile x:Name="SqlServerTile" HorizontalAlignment="Left" Height="125" Header=""
                Margin="339,514,0,0" Title="SQL Server" VerticalAlignment="Top" Width="155"
                ImageSource="/UI/Windows/Main/SqlServerTile.png" />
        <local:MetroTile x:Name="AccessTile" HorizontalAlignment="Left" Height="125" Header=""
                Margin="594,514,0,0" Title="MS Access" VerticalAlignment="Top" Width="155"
                ImageSource="/UI/Windows/Main/AccessTile.png" />
        <local:MetroTile x:Name="ProgramTile" HorizontalAlignment="Left" Height="126" Header=""
                Margin="88,77,0,0" Title="EPA Programs" VerticalAlignment="Top" Width="155"
                Grid.Column="1" ImageSource="/UI/Windows/Main/ProgramTile.png" />
        <local:MetroTile x:Name="EmailTile" HorizontalAlignment="Left" Height="126" Header=""
                Margin="88,0,0,0" Title="Email" VerticalAlignment="Center" Width="155"
                Grid.Column="1" ImageSource="/UI/Windows/Main/EmailTile.png" />
        <local:MetroTile x:Name="ExcelTile" HorizontalAlignment="Left" Height="126" Header=""
                Margin="85,514,0,0" Title="Excel Data" VerticalAlignment="Top" Width="155"
                ImageSource="/UI/Windows/Main/ExcelTile.png" />
        <local:MetroTile x:Name="BrowserTile" HorizontalAlignment="Left" Height="125" Header=""
                Margin="88,514,0,0" Title="Baby Browser" VerticalAlignment="Top" Width="155"
                Grid.Column="1" ImageSource="/UI/Windows/Main/BrowserTile.png" />
        <local:MetroTile x:Name="DocumentTile" Grid.Column="1" HorizontalAlignment="Left"
                Height="126" Header="" Margin="345,77,0,0" Title="Guidance" VerticalAlignment="Top"
                Width="155" ImageSource="/UI/Windows/Main/GuidanceTile.png" />
        <local:MetroTile x:Name="CalendarTile" HorizontalAlignment="Left" Height="126" Header=""
                Margin="85,0,0,0" Title="Fiscal Year" VerticalAlignment="Center" Width="155"
                Background="#FF282828" ImageSource="/UI/Windows/Main/CalendarTile.png" />
        <local:MetroTile x:Name="EditorTile" Grid.Column="1" Height="126" Header=""
                Margin="345,0,0,0" Title="SQL Editors" VerticalAlignment="Center"
                ImageSource="/UI/Windows/Main/SqlEditorTile.png" HorizontalAlignment="Left"
                Width="155" />
        <local:MetroTile x:Name="MapTile" Grid.Column="1" Height="125" Header=""
                Margin="345,514,0,0" Title="GIS Data" VerticalAlignment="Top"
                VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
                ImageSource="/UI/Windows/Main/MapTile.png" HorizontalAlignment="Left" Width="155" />
        <local:MetroTile x:Name="TestButton" Grid.Column="1" HorizontalAlignment="Left" Height="30"
                Header="" Margin="440,239,0,0" Title="Test" VerticalAlignment="Top" Width="55" />
    </Grid>
</Window>