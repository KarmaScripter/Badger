<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badger" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        x:Name="ExcelView" x:Class="Badger.ExcelWindow" mc:Ignorable="d" Title="Excel Data"
        Height="750" Width="1400" Background="#FF141414" BorderBrush="#FF0078D4" FontSize="9"
        Foreground="#FF6ABDFC" WindowStartupLocation="CenterScreen"
        Icon="/UI/Windows/Excel/Application.png" Padding="1,1,1,1" VerticalContentAlignment="Bottom"
        HorizontalContentAlignment="Stretch" Margin="3,3,3,3">
    <Grid x:Name="ExcelGrid">
        <syncfusion:SfSpreadsheetRibbon x:Name="Ribbon" HorizontalAlignment="Center"
                                        Margin="0,35,0,0" VerticalAlignment="Top" Width="1380" Height="122" />
        <local:ToolStrip x:Name="Toolbar" Margin="3,3,3,3" Height="40"
                         HorizontalAlignment="Center" Width="1400" VerticalAlignment="Bottom">
            <syncfusion:MenuItemSeparator />
            <local:ToolStripLabel x:Name="StatusLabel" Content="Date" />
            <local:ToolStripButton x:Name="FirstButton" ToolTip="First Record"
                                   ImageSource="/UI/Windows/Excel/FirstButton.png" Margin="3,3,3,3"
                                   Padding="1,1,1,1" />
            <local:ToolStripButton x:Name="PreviousButton" ToolTip="Previous Record"
                                   ImageSource="/UI/Windows/Excel/PreviousButton.png" />
            <local:ToolStripButton x:Name="NextButton" ToolTip="Next Record"
                                   ImageSource="/UI/Windows/Excel/NextButton.png" />
            <local:ToolStripButton x:Name="LastButton" ToolTip="Last Record"
                                   ImageSource="/UI/Windows/Excel/LastButton.png" />
            <syncfusion:MenuItemSeparator />
            <local:ToolStripDropDown />
            <syncfusion:MenuItemSeparator />
            <local:ToolStripTextBox />
            <syncfusion:MenuItemSeparator />
            <local:ToolStripButton x:Name="LookupButton" ToolTip="Lookup"
                                   ImageSource="/UI/Windows/Excel/LookUpButton.png" />
            <local:ToolStripButton x:Name="RefreshButton" ToolTip="Refresh"
                                   ImageSource="/UI/Windows/Excel/RefreshButton.png" />
            <local:ToolStripButton x:Name="EditButton" ToolTip="Edit"
                                   ImageSource="/UI/Windows/Excel/EditButton.png" />
            <local:ToolStripButton x:Name="UndoButton" ToolTip="Undo Last"
                                   ImageSource="/UI/Windows/Excel/BackButton.png" />
            <local:ToolStripButton x:Name="DeleteButton" ToolTip="Delete"
                                   ImageSource="/UI/Windows/Excel/DeleteButton.png" />
            <local:ToolStripButton x:Name="SaveButton" ToolTip="Save"
                                   ImageSource="/UI/Windows/Excel/SaveButton.png" />
            <local:ToolStripButton x:Name="ExportButton" ToolTip="Export"
                                   ImageSource="/UI/Windows/Excel/ExportButton.png" />
            <local:ToolStripButton x:Name="BrowseButton" ToolTip="Browse"
                                   ImageSource="/UI/Windows/Excel/BrowseButton.png" />
            <local:ToolStripButton x:Name="MenuButton" ToolTip="Main Menu"
                                   ImageSource="/UI/Windows/Excel/MenuButton.png" />
        </local:ToolStrip>
        <syncfusion:SfSpreadsheet x:Name="Spreadsheet" HorizontalAlignment="Center"
                                  Margin="0,162,0,0" VerticalAlignment="Top" Height="510" Width="1380" />
    </Grid>
</Window>
