<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Badger" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        xmlns:gif="http://wpfanimatedgif.codeplex.com" x:Name="ExcelView"
        x:Class="Badger.ExcelWindow" mc:Ignorable="d" Title="Excel Data" Height="750" Width="1400"
        Background="#FF141414" BorderBrush="#FF0078D4" FontSize="9" Foreground="#FF6ABDFC"
        WindowStartupLocation="CenterScreen" Icon="/UI/Windows/Excel/Application.png"
        Padding="1,1,1,1" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Stretch"
        Margin="3,3,3,3">
    <Canvas x:Name="ExcelCanvas">
        <local:ToolStrip x:Name="Toolbar" Padding="1,1,1,1" Height="40" Width="1400"
                Canvas.Top="670" Canvas.Left="4" HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <local:ToolStripLabel x:Name="StatusLabel" Content="Date &amp; Time" Width="70" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />
            <local:ToolStripButton x:Name="FirstButton" ToolTip="First Record"
                    ImageSource="/UI/Windows/Excel/FirstButton.png" Height="30" />
            <local:ToolStripButton x:Name="PreviousButton" ToolTip="Previous Record"
                    ImageSource="/UI/Windows/Excel/PreviousButton.png" Height="30" />
            <local:ToolStripButton x:Name="NextButton" ToolTip="Next Record"
                    ImageSource="/UI/Windows/Excel/NextButton.png" Height="30" />
            <local:ToolStripButton x:Name="LastButton" ToolTip="Last Record"
                    ImageSource="/UI/Windows/Excel/LastButton.png" Height="30" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />
            <local:ToolStripDropDown x:Name="ToolStripComboBox" BorderBrush="#FF6ABDFC"
                    Foreground="White" Margin="3,0,3,0" Width="175" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />
            <local:ToolStripTextBox x:Name="ToolStripTextBox" />
            <syncfusion:MenuItemSeparator Background="{x:Null}" BorderBrush="{x:Null}"
                    Foreground="{x:Null}" />
            <local:ToolStripButton x:Name="LookupButton" ToolTip="Look Up"
                    ImageSource="/UI/Windows/Excel/LookUpButton.png" Height="30" />
            <local:ToolStripButton x:Name="RefreshButton" ToolTip="Refresh"
                    ImageSource="/UI/Windows/Excel/RefreshButton.png" Height="30" />
            <local:ToolStripButton x:Name="FilterButton" Foreground="#FFA0BDFC" ToolTip="Filters"
                    ImageSource="/UI/Windows/Excel/FilterButton.png" />
            <local:ToolStripButton x:Name="EditButton" ToolTip="Edit"
                    ImageSource="/UI/Windows/Excel/EditButton.png" Height="30" />
            <local:ToolStripButton x:Name="UndoButton" ToolTip="Undo Last"
                    ImageSource="/UI/Windows/Excel/BackButton.png" Height="30" />
            <local:ToolStripButton x:Name="SaveButton" ToolTip="Save"
                    ImageSource="/UI/Windows/Excel/SaveButton.png" Height="30" />
            <local:ToolStripButton x:Name="DeleteButton" ToolTip="Delete"
                    ImageSource="/UI/Windows/Excel/DeleteButton.png" Height="30" />
            <local:ToolStripButton x:Name="ExportButton" ToolTip="Export"
                    ImageSource="/UI/Windows/Excel/ExportButton.png" />
            <local:ToolStripButton x:Name="BrowseButton" ToolTip="Browse"
                    ImageSource="/UI/Windows/Excel/BrowseButton.png" Height="30" />
            <ProgressBar Background="#FF141414" BorderBrush="#FF141414" Width="150" />
            <local:ToolStripButton x:Name="MenuButton" ToolTip="Main Menu"
                    ImageSource="/UI/Windows/Excel/MenuButton.png" Height="30" />
        </local:ToolStrip>
        <local:MetroTabControl x:Name="PrimaryTabControl" Height="659" Width="1390"
                HorizontalAlignment="Center" Canvas.Left="5" Canvas.Top="5" VerticalAlignment="Top">
            <TabItem Header="Workbook" Background="#FF141414" BorderBrush="#FF141414"
                    Foreground="#FFFFF7F7" Width="100">
                <Canvas Background="#FF141414" Height="634" VerticalAlignment="Top">
                    <syncfusion:SfSpreadsheetRibbon x:Name="Ribbon" Width="1375" Height="122"
                            Canvas.Left="3" Canvas.Top="30" HorizontalAlignment="Left"
                            VerticalAlignment="Center" />
                    <syncfusion:SfSpreadsheet x:Name="Spreadsheet" Height="485" Width="1375"
                            Canvas.Left="3" Canvas.Top="150" HorizontalAlignment="Center"
                            VerticalAlignment="Top" />
                </Canvas>
            </TabItem>
            <TabItem Header="Data Source" Background="#FF141414" BorderBrush="#FF141414"
                    Foreground="#FFF7F5F5" Width="100">
                <Canvas Background="#FF141414">
                    <local:MetroRadioButton x:Name="SQLiteRadioButton" Content="SQLite"
                            Canvas.Left="158" Canvas.Top="118" Width="65" Tag="SQLite"
                            HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <local:MetroRadioButton x:Name="SqlServerRadioButton" Content="SQL Server"
                            Canvas.Left="228" Canvas.Top="118" HorizontalAlignment="Left"
                            VerticalAlignment="Top" Width="90" Tag="SqlServer" />
                    <local:MetroRadioButton x:Name="AccessRadioButton" Content="Access"
                            Canvas.Left="328" Canvas.Top="118" HorizontalAlignment="Left"
                            VerticalAlignment="Top" Width="65" Tag="Access" />
                    <local:MetroRadioButton x:Name="SqlCeRadioButton" Content="SQL CE"
                            Canvas.Left="403" Canvas.Top="118" RenderTransformOrigin="0.444,0.501"
                            HorizontalAlignment="Left" VerticalAlignment="Top" Width="65"
                            Tag="SqlCe" />
                    <local:MetroListBox x:Name="TableListBox" Height="328" Width="315"
                            d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Top="153"
                            HorizontalAlignment="Left" Canvas.Left="163" VerticalAlignment="Top" />
                    <local:MetroComboBox x:Name="FirstCategoryComboBox" AllowMultiSelect="True" DefaultText="ComboBox Items"
                            Height="30" Width="150" Canvas.Left="538"
                            Canvas.Top="151">
                        <syncfusion:ComboBoxItemAdv Content="Item 1" />
                        <syncfusion:ComboBoxItemAdv Content="Item 2" />
                        <syncfusion:ComboBoxItemAdv Content="Item 3" />
                        <syncfusion:ComboBoxItemAdv Content="Item 4" />
                        <syncfusion:ComboBoxItemAdv Content="Item 5" />
                    </local:MetroComboBox>
                    <local:MetroListBox x:Name="FirstCategoryListBox" Height="287" Width="212"
                            d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left"
                            Canvas.Left="538" VerticalAlignment="Top" Canvas.Top="195" />
                    <local:MetroComboBox x:Name="SecondCategoryComboBox" AllowMultiSelect="True" DefaultText="ComboBox Items"
                            Height="30" Width="150" Canvas.Left="800"
                            Canvas.Top="151"
                            HorizontalAlignment="Left" VerticalAlignment="Top">
                        <syncfusion:ComboBoxItemAdv Content="Item 1" />
                        <syncfusion:ComboBoxItemAdv Content="Item 2" />
                        <syncfusion:ComboBoxItemAdv Content="Item 3" />
                        <syncfusion:ComboBoxItemAdv Content="Item 4" />
                        <syncfusion:ComboBoxItemAdv Content="Item 5" />
                    </local:MetroComboBox>
                    <local:MetroListBox x:Name="SecondCategoryListBox" Height="287" Width="212"
                            d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="800"
                            Canvas.Top="195" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    <local:MetroComboBox x:Name="ThirdCategoryComboBox" AllowMultiSelect="True" DefaultText="ComboBox Items"
                            Height="30" Width="150" Canvas.Left="1058"
                            Canvas.Top="151"
                            HorizontalAlignment="Left" VerticalAlignment="Top">
                        <syncfusion:ComboBoxItemAdv Content="Item 1" />
                        <syncfusion:ComboBoxItemAdv Content="Item 2" />
                        <syncfusion:ComboBoxItemAdv Content="Item 3" />
                        <syncfusion:ComboBoxItemAdv Content="Item 4" />
                        <syncfusion:ComboBoxItemAdv Content="Item 5" />
                    </local:MetroComboBox>
                    <local:MetroListBox x:Name="ThirdCategoryListBox" Height="287" Width="212"
                            d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="1058"
                            Canvas.Top="195" HorizontalAlignment="Left" VerticalAlignment="Top" />
                </Canvas>
            </TabItem>
            <TabItem x:Name="BusyTab" HorizontalAlignment="Left" Height="20" Header="Busy"
                    VerticalAlignment="Top" Width="100" BorderBrush="#FF141414"
                    Background="#FF141414" Foreground="#FFFFFDFD" Margin="0,-1,0,0">
                <Canvas x:Name="BusyCanvas" Background="#FF141414">
                    <Image x:Name="PictureBox" Height="580" Canvas.Left="23" Width="1350"
                            HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="10"
                            Stretch="Fill"
                            gif:ImageBehavior.AnimatedSource="/UI/Windows/Excel/Loading.gif" />
                </Canvas>
            </TabItem>
        </local:MetroTabControl>
    </Canvas>
</Window>
