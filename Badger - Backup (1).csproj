  </ItemGroup>

  <ItemGroup>
    <Reference Include="LinqStatistics">
      <HintPath>Libraries\LinqStatistics.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Badger.png" />
    <Resource Include="Windows\Chart\Badger.png" />
    <Resource Include="Windows\DataGrid\Badger.png" />
    <Resource Include="Windows\Dialogs\SplashNotification.png" />
    <Resource Include="Windows\Document\Badger.png" />
    <Resource Include="Windows\Excel\Badger.png" />
    <Resource Include="Windows\GeoMap\Badger.png" />
